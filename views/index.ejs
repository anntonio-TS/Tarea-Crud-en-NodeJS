<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>

        <title>CRUD_NODEJS</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
                </div>
            </div>
            </nav>

            <div class="container">
                <a href="/create" class="btn btn-outline-primary mt-4"><box-icon name='plus-circle'></box-icon></a>
                <table class="table table-bordered table-striped text-center mt-4">
                    <thead>
                        <tr class="bg-primary text-white">
                            <th scope="col">Carne</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Direccion</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">Gmail</th>
                            <th scope="col">Sangre</th>
                            <th scope="col">Fecha de Nacimiento</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach((user))=> { %>
                        <tr>
                            <td><%= user.carne %></td>
                            <td><%= user.nombre %></td>
                            <td><%= user.apellido %></td>
                            <td><%= user.direccion %></td>
                            <td><%= user.telefono %></td>
                            <td><%= user.gmail %></td>
                            <td><%= user.tipo_sangre %></td>
                            <td><%= user.fecha_nacimiento %></td>
                            <td>
                                <a href="/edit" class="btn btn-outline-info">editar</a>
                                <a href="/delete" class="btn btn-outline-danger">borrar</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>    
    </body>
</html>